{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Nova Categoria: </h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="post">
            <div class="row">
                <div class="col-md-6">
                    <label for="nome" class="col-md-3">Nome: </label>
                    <div class="col-md-9">
                        <input class="form-control" type="text" id="nome" name="nome" placeholder="Nome da categoria" required="required" minlength="2">
                    </div>
                </div>
                <div class="col-md-6">
                    <label for="slug" class="col-md-3">Slug: </label>
                    <div class="col-md-9">
                        <input class="form-control" type="text" id="slug" name="slug" placeholder="Slug da categoria" required="required" minlength="2">
                    </div>
                </div>
            </div>
            <br>
            <div class="row d-flex justify-content-center">
                <div class="col-md-3">
                    <button type="submit" class="btn btn-success">Criar categoria</button>
                </div>
            </div>
        </form>
    </div>
</div>