{{#each erros}}
    <div class="alert alert-danger"><i class="fa fa-times"></i> {{texto}}</div>
    {{else}}

{{/each}}

<div class="card mb-3">
    <div class="card-body">
        <h4>Nova Postagem: </h4>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" required="required" minlength="5">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" required="required" minlength="5">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" required="required" minlength="5">
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" cols="30" rows="10" class="form-control" style="resize: none;" required="required" minlength="5"></textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select" required="required">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-3" type="submit">Criar postagem</button>
        </form>
    </div>
</div>